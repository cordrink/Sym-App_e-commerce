{% extends 'base.html.twig' %}

{% block content %}
    <div class="row product-container">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h2>{{ product.name }}</h2>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ ( product.price / 100 ) | number_format(2, ',', '.') }} FCFA</span>
            <hr>
            <p>{{ product.description }}</p>
            <hr>
            <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

    <hr>

    <p>Decovrez les articles les plus vendus</p>
    <div class="row mb-5">
        {% for product in products %}
            <div class="col-md-3">
                {% include 'product/single_produc.html.twig' %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block title %}
    Description produit - LaboutiqueCMR
{% endblock %}

